<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="normalStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ProductItem.PriceStyle" parent="normalStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProductDetail.PriceStyle" parent="ProductItem.PriceStyle">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="ProductDetail.SpecialOfferStyle" parent="normalStyle">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="ProductDetail.IncludedServiceStyle" parent="normalStyle">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="ProductDetail.Normal" parent="normalStyle">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="ProductDetail.Title" parent="ProductDetail.Normal">
        <item name="android:textSize">25dp</item>
    </style>
</resources>