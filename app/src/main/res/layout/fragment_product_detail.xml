<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/svProduct1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/include_product_images_viewpager"
                layout="@layout/include_product_images_viewpager" />
            <LinearLayout
                android:layout_marginLeft="@dimen/product_detail_paragraph_space"
                android:layout_marginRight="@dimen/product_detail_paragraph_space"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include
                    android:id="@+id/include_product_base_information"
                    layout="@layout/include_product_base_information" />
                <include
                    android:id="@+id/include_product_information"
                    layout="@layout/include_product_information"/>
                <include
                    android:id="@+id/include_product_specification"
                    layout="@layout/include_product_specification"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>