<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        style="@style/ProductDetail.PriceStyle"
        android:id="@+id/tvPrice"
        android:text="---"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="@dimen/default_line_space"
        android:text="---"
        style="@style/ProductDetail.SpecialOfferStyle"
        android:id="@+id/tvSpecialOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvPrice" />
    <TextView
        android:layout_marginTop="@dimen/default_line_space"
        android:text="---"
        style="@style/ProductDetail.IncludedServiceStyle"
        android:id="@+id/tvIncludedServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSpecialOffer" />

</androidx.constraintlayout.widget.ConstraintLayout>