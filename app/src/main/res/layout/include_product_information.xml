<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/product_detail_paragraph_space"
    android:layout_marginBottom="@dimen/product_detail_paragraph_space"
    >


    <View
        android:id="@+id/vProductSpecificationItemTopLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProductInformationTitle"
        style="@style/ProductDetail.Title"
        android:text="@string/product_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/vProductSpecificationItemTopLine"
        />


    <TextView
        android:layout_marginTop="@dimen/default_line_space"
        android:text="---"
        style="@style/ProductDetail.Normal"
        android:id="@+id/tvProductInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvProductInformationTitle" />

    <LinearLayout
        android:layout_marginTop="@dimen/product_detail_paragraph_space"
        android:id="@+id/llProductCode"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvProductInformation" >
        <TextView
            style="@style/ProductDetail.Normal"
            android:text="@string/product_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="----"
            style="@style/ProductDetail.Normal"
            android:id="@+id/tvProductCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>