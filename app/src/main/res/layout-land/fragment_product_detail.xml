<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/svProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/include_product_images_viewpager"
                    layout="@layout/include_product_images_viewpager" />
                <LinearLayout
                    android:layout_marginLeft="@dimen/product_detail_paragraph_space"
                    android:layout_marginRight="@dimen/product_detail_paragraph_space"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include
                        android:id="@+id/include_product_information"
                        layout="@layout/include_product_information"/>
                    <include
                        android:id="@+id/include_product_specification"
                        layout="@layout/include_product_specification"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/grey"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/product_detail_paragraph_space">
                android:layout_marginRight="@dimen/product_detail_paragraph_space">
                <include
                    android:id="@+id/include_product_base_information"
                    layout="@layout/include_product_base_information" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>